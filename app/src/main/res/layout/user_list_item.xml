<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Tom"
            android:textSize="17sp"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/user_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            tools:text="@string/title_student"
            android:textColor="@android:color/black"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="15sp"
            android:layout_marginLeft="32dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rectangle_tag"/>
    </LinearLayout>

    <TextView
        android:id="@+id/user_list_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="自我介绍测试测试测试测试测试测试测试测试测试\n测试测试测试测试测试测试测试测试测试"
        android:textColor="@color/dark_gray"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>