<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkGrayBackground">

    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_new_question"
        android:elevation="2dip">

        <RelativeLayout
            android:id="@+id/my_answer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/my_answer_question_title"
                android:layout_margin="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Test Question Title"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"/>
            <ImageView
                android:id="@+id/my_answer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_complete_small"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/my_answer_content_text"
            android:layout_below="@id/my_answer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            tools:text="Those Lines here is just to show the user'answer to this question and to test the max line and the ellipsize config, and what ever I can not make up more"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:maxLines="3"
            android:ellipsize="end"/>

    </RelativeLayout>

</RelativeLayout>